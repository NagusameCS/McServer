{
  "name": "mcserver",
  "version": "1.0.0-beta.2",
  "description": "Shared Minecraft server hosting with automatic world sync, NAT traversal, and seamless host handoff",
  "main": "electron/main.js",
  "bin": {
    "mcserver": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run build:dashboard",
    "build:dashboard": "cd dashboard && npm run build",
    "dev": "ts-node src/index.ts",
    "dev:dashboard": "cd dashboard && npm run dev",
    "dev:electron": "npm run build && electron .",
    "start": "node dist/index.js",
    "cli": "node dist/cli/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "package": "npm run build && pkg . --targets node18-linux-x64,node18-macos-x64,node18-win-x64 --output dist/mcserver",
    "package:universal": "npm run build && pkg . --targets node18-macos-arm64,node18-macos-x64,node18-win-x64,node18-linux-x64",
    "electron:build": "npm run build && electron-builder",
    "electron:mac": "npm run build && electron-builder --mac --universal",
    "electron:mac:mas": "npm run build && electron-builder --mac mas --universal",
    "electron:win": "npm run build && electron-builder --win",
    "electron:linux": "npm run build && electron-builder --linux",
    "electron:all": "npm run build && electron-builder --mac --win --linux"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "dashboard/dist/**/*",
      "templates/**/*"
    ],
    "outputPath": "release"
  },
  "keywords": [
    "minecraft",
    "server",
    "hosting",
    "forge",
    "fabric",
    "multiplayer"
  ],
  "author": {
    "name": "NagusameCS",
    "email": "nagusamecs@users.noreply.github.com"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "inquirer": "^8.2.6",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "node-fetch": "^2.7.0",
    "ora": "^5.4.1",
    "portfinder": "^1.0.32",
    "simple-git": "^3.21.0",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "yaml": "^2.3.4",
    "yauzl": "^2.10.0",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.9",
    "@types/uuid": "^9.0.7",
    "@types/yauzl": "^2.10.3",
    "@types/yazl": "^2.4.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.6.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^8.54.0",
    "pkg": "^5.8.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "vitest": "^1.6.1"
  },
  "build": {
    "appId": "com.nagusamecs.mcserver",
    "productName": "McServer",
    "copyright": "Copyright (c) 2026 NagusameCS",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dashboard/dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "app/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "dashboard/dist",
        "to": "app/dashboard/dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "mas": {
      "category": "public.app-category.games",
      "icon": "build/icon.png",
      "hardenedRuntime": false,
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "provisioningProfile": "build/embedded.provisionprofile",
      "target": [
        {
          "target": "mas",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "McServer"
    },
    "linux": {
      "icon": "build/icons",
      "category": "Game",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "executableName": "mcserver"
    },
    "publish": {
      "provider": "github",
      "owner": "NagusameCS",
      "repo": "McServer"
    },
    "afterSign": "scripts/notarize.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
